FROM php:8.4-cli AS builder

# ã‚·ã‚¹ãƒ†ãƒ ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpq-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libicu-dev \
    zip \
    unzip \
    nodejs \
    npm \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# PHPæ‹¡å¼µæ©Ÿèƒ½ã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN docker-php-ext-install \
    pdo_pgsql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    gd \
    intl \
    zip

# Composerã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª
WORKDIR /var/www/html

# ä¾å­˜é–¢ä¿‚ãƒ•ã‚¡ã‚¤ãƒ«ã‚’å…ˆã«ã‚³ãƒ”ãƒ¼ï¼ˆã‚­ãƒ£ãƒƒã‚·ãƒ¥æœ€é©åŒ–ï¼‰
COPY src/composer.json src/composer.lock ./
RUN composer install --no-dev --no-scripts --no-autoloader --no-interaction

# Nodeã®ä¾å­˜é–¢ä¿‚ã‚’ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
COPY src/package*.json ./
RUN npm ci

# ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ã‚³ãƒ”ãƒ¼
COPY src/ ./

# Composerã®ã‚ªãƒ¼ãƒˆãƒ­ãƒ¼ãƒ€ãƒ¼ã‚’ç”Ÿæˆ
RUN composer dump-autoload --optimize --no-dev

# ãƒ•ãƒ­ãƒ³ãƒˆã‚¨ãƒ³ãƒ‰ã‚¢ã‚»ãƒƒãƒˆã‚’ãƒ“ãƒ«ãƒ‰
RUN npm run build

# ãƒ“ãƒ«ãƒ‰æˆæœç‰©ã‚’ç¢ºèªï¼ˆVite 5+ å¯¾å¿œï¼‰
RUN echo "=== ğŸ“¦ Checking Vite build output ===" && \
    ls -laR public/build/ && \
    echo "=== ğŸ“„ Checking manifest location ===" && \
    if [ -f "public/build/manifest.json" ]; then \
        echo "âœ… Manifest at root" && cat public/build/manifest.json; \
    elif [ -f "public/build/.vite/manifest.json" ]; then \
        echo "âœ… Manifest in .vite/" && cat public/build/.vite/manifest.json; \
    else \
        echo "âŒ Manifest not found!"; \
        exit 1; \
    fi

# ä¸è¦ãªNode modulesã‚’å‰Šé™¤
RUN rm -rf node_modules

# ============================================
# æœ¬ç•ªã‚¹ãƒ†ãƒ¼ã‚¸
# ============================================
FROM php:8.4-cli

# å¿…è¦ãªå®Ÿè¡Œæ™‚ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®ã¿ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN apt-get update && apt-get install -y \
    libpq-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libicu-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# PHPæ‹¡å¼µæ©Ÿèƒ½ã‚’builderã‚¹ãƒ†ãƒ¼ã‚¸ã‹ã‚‰ã‚³ãƒ”ãƒ¼
COPY --from=builder /usr/local/lib/php/extensions/ /usr/local/lib/php/extensions/
COPY --from=builder /usr/local/etc/php/conf.d/ /usr/local/etc/php/conf.d/

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª
WORKDIR /var/www/html

# ãƒ“ãƒ«ãƒ‰ã‚¹ãƒ†ãƒ¼ã‚¸ã‹ã‚‰ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ã‚’ã‚³ãƒ”ãƒ¼
COPY --from=builder --chown=www-data:www-data /var/www/html ./

# ãƒ“ãƒ«ãƒ‰æˆæœç‰©ã®ç¢ºèªï¼ˆVite 5+ å¯¾å¿œï¼‰
RUN echo "=== ğŸ“¦ Verifying build assets in production ===" && \
    ls -la public/build/ && \
    if [ -f "public/build/manifest.json" ] || [ -f "public/build/.vite/manifest.json" ]; then \
        echo "âœ… Manifest found"; \
    else \
        echo "âŒ Manifest missing!"; \
    fi

# ã‚¹ãƒˆãƒ¬ãƒ¼ã‚¸ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ä½œæˆã¨æ¨©é™è¨­å®š
RUN mkdir -p storage/framework/{sessions,views,cache} \
    && mkdir -p storage/logs \
    && mkdir -p bootstrap/cache \
    && chown -R www-data:www-data storage bootstrap/cache \
    && chmod -R 775 storage bootstrap/cache

# ã‚¨ãƒ³ãƒˆãƒªãƒã‚¤ãƒ³ãƒˆã‚¹ã‚¯ãƒªãƒ—ãƒˆ
RUN echo '#!/bin/bash
set -e

echo "========================================"
echo "ğŸš€ Sorairo Note - Starting Deployment"
echo "========================================"

cd /var/www/html

# ====== ã“ã“ã‹ã‚‰ è¿½è¨˜: ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ç”¨ãƒ‡ã‚£ã‚¹ã‚¯ã®ãƒ‘ã‚¹ã‚’ç”¨æ„ ======
# æ°¸ç¶šãƒ‡ã‚£ã‚¹ã‚¯ã®ãƒ‘ã‚¹ (Render ã®ç’°å¢ƒå¤‰æ•° RENDER_DISK_PATH ã‚’å„ªå…ˆ)
UPLOADS_PATH="${RENDER_DISK_PATH:-/var/uploads}"
UPLOADS_PUBLIC="${UPLOADS_PATH}/public"

echo "ğŸ“‚ Ensuring uploads directory exists at: ${UPLOADS_PUBLIC}"

mkdir -p "${UPLOADS_PUBLIC}"

# www-data ã§å®Ÿè¡Œã—ã¦ã„ã‚‹å‰æãªã®ã§ã€sudo ã¯ä¸è¦
chown -R www-data:www-data "${UPLOADS_PATH}" || echo "âš ï¸ chown failed (maybe not permitted)"
chmod -R 775 "${UPLOADS_PATH}" || echo "âš ï¸ chmod failed (maybe not permitted)"

# Laravel å´ã®è¨­å®š:
#   FILESYSTEM_DISK_ROOT=/var/uploads/public
#   RENDER_DISK_PATH=/var/uploads
# ã«ã—ã¦ãŠãã¨ã€disk("public") ã¨ storage:link ã®ä¸¡æ–¹ãŒã“ã“ã‚’æŒ‡ã™
echo "ğŸ“Œ FILESYSTEM_DISK_ROOT=${FILESYSTEM_DISK_ROOT:-not set}"
echo "ğŸ“Œ RENDER_DISK_PATH=${RENDER_DISK_PATH:-not set}"
# ====== ã“ã“ã¾ã§ è¿½è¨˜ ======

echo "ğŸ“¦ Checking frontend assets..."
if [ ! -d "public/build" ]; then
  echo "âŒ ERROR: public/build directory not found!"
else
  echo "âœ… Build directory exists"
  if [ -f "public/build/manifest.json" ]; then
    echo "âœ… Manifest at root (Vite <5)"
  elif [ -f "public/build/.vite/manifest.json" ]; then
    echo "âœ… Manifest in .vite/ (Vite 5+)"
  else
    echo "âš ï¸  WARNING: Manifest not found"
  fi
  echo "Built assets:"
  ls -lh public/build/assets/ 2>/dev/null || echo "No assets"
fi

echo "ğŸ“¦ Running database migrations..."
php artisan migrate --force || { echo "âŒ Migration failed"; exit 1; }

echo "âš¡ Caching configuration files..."
php artisan config:cache
php artisan route:cache
php artisan view:cache

echo "ğŸ”— Creating storage symlink..."
php artisan storage:link || echo "âš ï¸ storage:link failed (maybe already exists)"

echo "âœ… Deployment complete!"
echo "ğŸŒ Starting web server on port ${PORT:-8000}..."
echo "========================================"

exec php artisan serve --host=0.0.0.0 --port=${PORT:-8000}
' > /entrypoint.sh && chmod +x /entrypoint.sh
# ãƒãƒ¼ãƒˆå…¬é–‹
EXPOSE ${PORT:-8000}

# ãƒ˜ãƒ«ã‚¹ãƒã‚§ãƒƒã‚¯
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:${PORT:-8000}/ || exit 1

# ã‚»ã‚­ãƒ¥ãƒªãƒ†ã‚£ï¼šwww-dataãƒ¦ãƒ¼ã‚¶ãƒ¼ã§å®Ÿè¡Œ
USER www-data

# ã‚¨ãƒ³ãƒˆãƒªãƒã‚¤ãƒ³ãƒˆ
ENTRYPOINT ["/entrypoint.sh"]