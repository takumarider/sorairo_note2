FROM php:8.4-cli AS builder

# ã‚·ã‚¹ãƒ†ãƒ ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN apt-get update && apt-get install -y \
    git \
    curl \
    libpq-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libicu-dev \
    zip \
    unzip \
    nodejs \
    npm \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# PHPæ‹¡å¼µæ©Ÿèƒ½ã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
RUN docker-php-ext-install \
    pdo_pgsql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    gd \
    intl \
    zip

# Composerã®ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª
WORKDIR /var/www/html

# ä¾å­˜é–¢ä¿‚ãƒ•ã‚¡ã‚¤ãƒ«ã‚’å…ˆã«ã‚³ãƒ”ãƒ¼ï¼ˆã‚­ãƒ£ãƒƒã‚·ãƒ¥æœ€é©åŒ–ï¼‰
COPY src/composer.json src/composer.lock ./
RUN composer install --no-dev --no-scripts --no-autoloader --no-interaction

# Nodeã®ä¾å­˜é–¢ä¿‚ã‚’ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
COPY src/package*.json ./
RUN npm ci

# ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ãƒ•ã‚¡ã‚¤ãƒ«ã‚’ã‚³ãƒ”ãƒ¼
COPY src/ ./

# Composerã®ã‚ªãƒ¼ãƒˆãƒ­ãƒ¼ãƒ€ãƒ¼ã‚’ç”Ÿæˆ
RUN composer dump-autoload --optimize --no-dev

# ãƒ•ãƒ­ãƒ³ãƒˆã‚¨ãƒ³ãƒ‰ã‚¢ã‚»ãƒƒãƒˆã‚’ãƒ“ãƒ«ãƒ‰
RUN npm run build

# ãƒ“ãƒ«ãƒ‰æˆæœç‰©ã‚’ç¢ºèªï¼ˆãƒ‡ãƒãƒƒã‚°ç”¨ï¼‰
RUN echo "=== ğŸ“¦ Checking Vite build output ===" && \
    ls -laR public/build/ && \
    echo "=== ğŸ“„ Manifest content ===" && \
    cat public/build/manifest.json || echo "âš ï¸ Build failed!"

# ä¸è¦ãªNode modulesã‚’å‰Šé™¤
RUN rm -rf node_modules

# ============================================
# æœ¬ç•ªã‚¹ãƒ†ãƒ¼ã‚¸
# ============================================
FROM php:8.4-cli

# å¿…è¦ãªå®Ÿè¡Œæ™‚ãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã®ã¿ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«ï¼ˆ-devãƒ‘ãƒƒã‚±ãƒ¼ã‚¸ã‚’ä½¿ç”¨ï¼‰
RUN apt-get update && apt-get install -y \
    libpq-dev \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    libicu-dev \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# PHPæ‹¡å¼µæ©Ÿèƒ½ã‚’builderã‚¹ãƒ†ãƒ¼ã‚¸ã‹ã‚‰ã‚³ãƒ”ãƒ¼
COPY --from=builder /usr/local/lib/php/extensions/ /usr/local/lib/php/extensions/
COPY --from=builder /usr/local/etc/php/conf.d/ /usr/local/etc/php/conf.d/

# ä½œæ¥­ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒª
WORKDIR /var/www/html

# ãƒ“ãƒ«ãƒ‰ã‚¹ãƒ†ãƒ¼ã‚¸ã‹ã‚‰ã‚¢ãƒ—ãƒªã‚±ãƒ¼ã‚·ãƒ§ãƒ³ã‚’ã‚³ãƒ”ãƒ¼
COPY --from=builder --chown=www-data:www-data /var/www/html ./

# ãƒ“ãƒ«ãƒ‰æˆæœç‰©ã®ç¢ºèªï¼ˆæœ¬ç•ªç’°å¢ƒã§ã‚‚æ¤œè¨¼ï¼‰
RUN echo "=== ğŸ“¦ Verifying build assets in production ===" && \
    ls -la public/build/ && \
    test -f public/build/manifest.json && echo "âœ… Manifest exists" || echo "âŒ Manifest missing!"

# ã‚¹ãƒˆãƒ¬ãƒ¼ã‚¸ãƒ‡ã‚£ãƒ¬ã‚¯ãƒˆãƒªã®ä½œæˆã¨æ¨©é™è¨­å®š
RUN mkdir -p storage/framework/{sessions,views,cache} \
    && mkdir -p storage/logs \
    && mkdir -p bootstrap/cache \
    && chown -R www-data:www-data storage bootstrap/cache \
    && chmod -R 775 storage bootstrap/cache

# ã‚¨ãƒ³ãƒˆãƒªãƒã‚¤ãƒ³ãƒˆã‚¹ã‚¯ãƒªãƒ—ãƒˆ
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
echo "========================================"\n\
echo "ğŸš€ Sorairo Note - Starting Deployment"\n\
echo "========================================"\n\
\n\
cd /var/www/html\n\
\n\
echo "ğŸ“¦ Checking frontend assets..."\n\
if [ ! -d "public/build" ]; then\n\
  echo "âŒ ERROR: public/build directory not found!"\n\
  echo "Frontend assets are missing. Build may have failed."\n\
else\n\
  echo "âœ… Build directory exists"\n\
  if [ -f "public/build/manifest.json" ]; then\n\
    echo "âœ… Manifest file found"\n\
    echo "Built assets:"\n\
    ls -lh public/build/assets/ 2>/dev/null || echo "No assets directory"\n\
  else\n\
    echo "âš ï¸  WARNING: Manifest file not found"\n\
  fi\n\
fi\n\
\n\
echo "ğŸ“¦ Running database migrations..."\n\
php artisan migrate --force || { echo "âŒ Migration failed"; exit 1; }\n\
\n\
echo "âš¡ Caching configuration files..."\n\
php artisan config:cache\n\
php artisan route:cache\n\
php artisan view:cache\n\
\n\
echo "âœ… Deployment complete!"\n\
echo "ğŸŒ Starting web server on port ${PORT:-8000}..."\n\
echo "========================================"\n\
\n\
exec php artisan serve --host=0.0.0.0 --port=${PORT:-8000}\n\
' > /entrypoint.sh && chmod +x /entrypoint.sh

# ãƒãƒ¼ãƒˆå…¬é–‹
EXPOSE ${PORT:-8000}

# ãƒ˜ãƒ«ã‚¹ãƒã‚§ãƒƒã‚¯
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:${PORT:-8000}/ || exit 1

# ã‚»ã‚­ãƒ¥ãƒªãƒ†ã‚£ï¼šwww-dataãƒ¦ãƒ¼ã‚¶ãƒ¼ã§å®Ÿè¡Œ
USER www-data

# ã‚¨ãƒ³ãƒˆãƒªãƒã‚¤ï¿½ï¿½ï¿½ãƒˆ
ENTRYPOINT ["/entrypoint.sh"]