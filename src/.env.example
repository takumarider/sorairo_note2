APP_NAME="Sorairo Note 2"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ===================================================
# セキュリティ注意事項:
# - APP_KEY は必ず `php artisan key:generate` で生成してください
# - 本番環境では APP_DEBUG=false に設定してください
# - このファイルに実際のキーや認証情報を記載しないでください
# ===================================================

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja
APP_FAKER_LOCALE=ja_JP
APP_TIMEZONE=Asia/Tokyo

APP_MAINTENANCE_DRIVER=file

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=sorairo_db
DB_PORT=5432
DB_DATABASE=sorairo
DB_USERNAME=sorairo
DB_PASSWORD=

BROADCAST_CONNECTION=log
CACHE_STORE=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

MAIL_MAILER=smtp
MAIL_HOST=sorairo_mail
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# 管理者アカウント設定（初期セットアップ用）
ADMIN_NAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=

VITE_APP_NAME="${APP_NAME}"
